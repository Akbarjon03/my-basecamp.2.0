<br/>
<div class="card">
  <div class="card-header">
    <%= render "form", todo: @todo %>
    <h1>Todos</h1>
  </div>
  
  <div class="card-body">
    <div id="todos">
      <% @todos.each do |todo| %>
        <%= render todo %>
        <p>
          <%= link_to "Show this todo", todo , class:"editslinks" %>
        </p> 
        </p> 
      <% end %>
    </div>
  </div>
</div>